@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <MudMenu StartIcon="@Icons.Material.Filled.AccountCircle"
                 EndIcon="@Icons.Material.Filled.KeyboardArrowDown"
                 Color="Color.Inherit"
                 Variant="Variant.Text"
                 Label="@context.User.Identity?.Name"
                 AnchorOrigin="Origin.BottomRight"
                 TransformOrigin="Origin.TopRight"
                 Dense="true"
                 Class="ml-4 mr-1 account-menu">
            <MudMenuItem OnClick="Logout">Log out</MudMenuItem>
        </MudMenu>
    </Authorized>

    <NotAuthorized>
        <MudButton Variant="Variant.Outlined"
                   Color="Color.Inherit"
                   OnClick="Login"
                   StartIcon="@Icons.Material.Filled.Login"
                   Class="ml-2 mr-2">
            Log in
        </MudButton>
    </NotAuthorized>
</AuthorizeView>

@code{
    void Login()
    {
        Navigation.NavigateTo($"/account/login?returnUrl={Uri.EscapeDataString(Navigation.Uri)}", forceLoad: true);
    }

    void Logout()
    {
        Navigation.NavigateTo("/account/logout", forceLoad: true);
    }
}
