@using FlowSynx.Client.Messages.Requests.Plugins
@using MudBlazor

@attribute [Authorize]
@inject IAccessTokenProvider TokenProvider
@inject IFlowSynxClient FlowSynxClient
@inject ISnackbar SnackBar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" /> Install plugin
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField For="@(() => UpdatePluginRequest.Type)"
                              @bind-Value="UpdatePluginRequest.Type"
                              Label="Plugin type"
                              Variant="Variant.Text"
                              Margin="Margin.Dense"
                              ReadOnly="true"
                              Disabled="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField For="@(() => UpdatePluginRequest.OldVersion)"
                              @bind-Value="UpdatePluginRequest.OldVersion"
                              Label="Current version"
                              Variant="Variant.Text"
                              Margin="Margin.Dense"
                              ReadOnly="true"
                              Disabled="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField For="@(() => UpdatePluginRequest.NewVersion)"
                              @bind-Value="UpdatePluginRequest.NewVersion"
                              Label="New version"
                              Required="true"
                              Variant="Variant.Text"
                              Margin="Margin.Dense"
                              HelperText="Enter the new version of the plugin" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton DisableElevation Variant="Variant.Text" 
                                    StartIcon="@Icons.Material.Filled.Close"
                                    Color="Color.Default"
                                    Disabled="@IsProcessing"
                                    OnClick="Cancel">Cancel</MudButton>

        <MudButton DisableElevation Variant="Variant.Filled" 
                                    StartIcon="@Icons.Material.Filled.Save"
                                    Color="Color.Primary" 
                                    Disabled="@IsProcessing"
                                    OnClick="Update">@(IsProcessing ? "Processing..." : "Update")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string PluginType { get; set; } = "";

    [Parameter]
    public string CurrentPluginVersion { get; set; } = "";

    private bool IsProcessing = false;
    private UpdatePluginRequest UpdatePluginRequest = new() { 
        Type = string.Empty,
            OldVersion = string.Empty,
        NewVersion = string.Empty 
    };

    override protected Task OnInitializedAsync()
    {
        UpdatePluginRequest = new()
        {
            Type = PluginType,
            OldVersion = CurrentPluginVersion,
            NewVersion = string.Empty
        };
        return Task.CompletedTask;
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void BackdropHandler(MouseEventArgs e)
    {
        if (!IsProcessing)
            MudDialog.Cancel();
    }

    private void KeyHandler(KeyboardEventArgs e)
    {
        if (e.Key == "Escape" && !IsProcessing)
            MudDialog.Cancel();
    }

    private async Task Update()
    {
        try
        {
            IsProcessing = true;
            string? token;
            var accessTokenResult = await TokenProvider.GetAccessTokenAsync();

            if (string.IsNullOrEmpty(accessTokenResult))
                token = "No token available or user not authenticated.";
            else
                token = accessTokenResult;

            var authenticationStrategy = new FlowSynx.Client.Authentication.BearerTokenAuthStrategy(token);
            FlowSynxClient.SetAuthenticationStrategy(authenticationStrategy);

            var result = await FlowSynxClient.Plugins.UpdateAsync(UpdatePluginRequest);
            if (result.StatusCode != 200)
            {
                SnackBar.Add("Server error while processing the request.", Severity.Error);
                return;
            }

            var payload = result.Payload;
            if (!payload.Succeeded)
            {
                var errorMessage = string.Join(Environment.NewLine, payload.Messages);
                SnackBar.Add($"Update plugin error:\n{errorMessage}", Severity.Error);
                return;
            }
            else
            {
                SnackBar.Add("Plugin updated successfully!", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
        catch (Exception ex)
        {
            SnackBar.Add($"Unexpected error: {ex.Message}", Severity.Error);
        }
        finally
        {
            IsProcessing = false;
        }
    }
}